@model LibraryManagement.Objects.Borrow

@{
    ViewBag.Title = "Borrow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Borrow</h2>
<div>
    <p>Borrower : @Model.Customer.Name - sdt : @Model.Customer.Phone - Address = @Model.Customer.Address</p>
    <p>Book - Id : @Model.BookId - @Model.Book.Title</p>
    <p>Description : @Model.Book.Description</p>
</div>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerId, new { htmlAttributes = new { @class = "form-control",@Value=Model.CustomerId,@type="hidden" } })
                @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.BookId, new { htmlAttributes = new { @class = "form-control", @Value = Model.BookId, @type = "hidden" } })
                @Html.ValidationMessageFor(model => model.BookId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Resever" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Catalogue")
</div>
